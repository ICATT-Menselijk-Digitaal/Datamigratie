{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-apphost",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Datamigratie.AppHost/Datamigratie.AppHost.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-apphost",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Datamigratie.AppHost/Datamigratie.AppHost.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
